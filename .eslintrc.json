{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:astro/recommended"
    ],
    "overrides": [
        {
            "files": [
                "./src/**/*.astro"
            ],
            "parser": "astro-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser",
                "extraFileExtensions": [".astro"]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "extraFileExtensions": [".astro"],
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "quotes": ["error", "single"],
        "semi": ["error", "never"]
    }
}
